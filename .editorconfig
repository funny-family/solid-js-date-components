root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

# https://stackoverflow.com/questions/48864985/vscode-single-to-double-quote-automatic-replace
[*.{js,jsx,ts,tsx}]
quote_type = single
